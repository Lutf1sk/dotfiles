
# ----- background processes (void)
exec --no-startup-id swaybg -c 080808
exec --no-startup-id pipewire
exec --no-startup-id swayidle
exec --no-startup-id waybar

# output Virtual-1 mode 1920x1080

output HDMI-A-1 disable
output DP-3 mode 2560x1440@240hz adaptive_sync on pos 0    0 render_bit_depth 10 hdr off
output DP-1 mode 2560x1440@240hz adaptive_sync on pos 2560 0 render_bit_depth 10 hdr off

exec --no-startup-id dbus-update-activation-environment --all


# ----- program hotkeys (void)
bindsym $mod+s exec --no-startup-id bash "$HOME/.config/i3/toggle-keyboard-layout.sh"

